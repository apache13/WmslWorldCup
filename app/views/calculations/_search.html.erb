<%= form_tag("/calculations", method: "get" , :role=>"form") do %>
<div class="row">
	<div class="col-md-3">
		<div class="form-group">
			<%= label_tag(:player) %>
			<%= select_tag(:player , options_for_select(Player.all.collect {|t| [ t.name , t.id]}), :include_blank => true , :class=>"form-control") %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-3">
		<%= submit_tag("Search" , :class=>"btn btn-default") %>
	</div>
</div>
<% end %>
