<strong>Information</strong>
<div class="row">
	<div class="col-md-2">
		<p>
			<%= facebook_thumbnail_image_tag(@calculation.bet.player.user,'small') %>
		</p>
		<p>
			<strong>Name:</strong>
			<%= @calculation.bet.player.name %>
		</p>
		<p>
			<strong>Team:</strong>
			<%= flag_image_tag(@calculation.bet.player.team) %>
		</p>
	</div>
	<div class="col-md-5">
		<p>
			<strong>Match closed:</strong>
			<%= @calculation.bet.match.closed %>
		</p>
		<p>
			<strong>Team1:</strong>
			<%= flag_image_tag @calculation.bet.match.team1 %>
			<strong>Team2:</strong>
			<%= flag_image_tag @calculation.bet.match.team2 %>
		</p>
		<p>
			<strong>Description:</strong>
			<%= @calculation.bet.match.description %>
		</p>
		<p>
			<strong>Match date/time:</strong>
			<%= @calculation.bet.match.match.localtime %>
		</p>
		<p>
			<strong>LIVE:</strong>
			<% @calculation.bet.match.live.split(",").each do |ch| %>
			<%= live_image_tag(ch) %>
			<% end%>
		</p>

	</div>
</div>