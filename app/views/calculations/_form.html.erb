<%= form_for(@calculation) do |f| %>
<% if @calculation.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@calculation.errors.count, "error") %> prohibited this calculation from being saved:</h2>

	<ul>
		<% @calculation.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<strong>Information</strong>
<div class="row">
	<div class="col-md-2">
		<p>
			<%= facebook_thumbnail_image_tag(@calculation.bet.player.user,'small') %>
		</p>
		<p>
			<strong>Name:</strong>
			<%= @calculation.bet.player.name %>
		</p>
		<p>
			<strong>Team:</strong>
			<%= flag_image_tag(@calculation.bet.player.team) %>
		</p>
	</div>
	<div class="col-md-5">
		<p>
			<strong>Match closed:</strong>
			<%= @calculation.bet.match.closed %>
		</p>
		<p>
			<strong>Team1:</strong>
			<%= flag_image_tag @calculation.bet.match.team1 %>
			<strong>Team2:</strong>
			<%= flag_image_tag @calculation.bet.match.team2 %>
		</p>
		<p>
			<strong>Description:</strong>
			<%= @calculation.bet.match.description %>
		</p>
		<p>
			<strong>Match date/time:</strong>
			<%= @calculation.bet.match.match.localtime %>
		</p>
		<p>
			<strong>LIVE:</strong>
			<% @calculation.bet.match.live.split(",").each do |ch| %>
			<%= live_image_tag(ch) %>
			<% end%>
		</p>

	</div>
	<div class="col-md-5">
		<%= render "calculations/result"%>
	</div>
	
</div>

<div class="row">
	<div class="col-md-6">
		<strong>Bet</strong>
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> <%= f.label :result %><em> (90 minutes 10 Pts)</em></td>
					<td></td>
				</tr>
				<tr>
					<td> <%= f.label :team1_score %><em> (10 Pts)</em></td>
					<td></td>
				</tr>
				<tr>
					<td> <%= f.label :team2_score %><em> (10 Pts)</em></td>
					<td></td>
				</tr>
				<tr>
					<td> <%= f.label 'Bonus favorite team' %><em> (10%)</em></td>
					<td> <%= flag_image_tag(@calculation.player.team) %> </td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-md-6">
		<strong>Calculation</strong>
		<table class="table table-hover">
			<thead>
				<tr>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td> <%= f.label :team_winner_point %></td>
					<td> <%= f.number_field :team_winner_point , :readonly => @view_only%> </td>
				</tr>
				
				<tr>
					<td rowspan="2"> <%= f.label :score_point %></td>
					<td> <%= f.number_field :score_point , :readonly => @view_only%> </td>
				</tr>
				<tr>
					<td><%= '-' %> </td>
				</tr>
				
				<tr>
					<td><%= f.label 'Bonus team score' %></td>
					<td><%= '-' %> </td>
				</tr>
				
				<tr>
					<td><%= f.label :total_point %></td>
					<td><%= f.number_field :total_point , :readonly => @view_only%> </td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<% if !@view_only %>
	<div class="row">
		<div class="col-md-12">
			<div class="actions">
				<%= f.submit %>
			</div>
		</div>
	</div>
<% end %>

<% end %>
