<h1>Generate#calculate</h1>
<p>Find me in app/views/generate/calculate.html.erb</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Cal ID.</th>
      <th>Bet ID.</th>
      <th>Facebook</th>
      <th>Player</th>
      <th>Match</th>
      <th>Description</th>
      <th>Total point</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @calculations.each do |calculation| %>
      <tr>
      	<td><%= calculation.id %></td>
        <td><%= calculation.bet.id %></td>
        <td><%= facebook_image_tag calculation.player %></td>
        <td><%= calculation.player.name %></td>
        <td><%= calculation.bet.match.match %></td>
        <td><%= calculation.bet.match.description %></td>
        <td><%= calculation.total_point %></td>
        <td><%= link_to 'Show', calculation %></td>
        <td><%= link_to 'Edit', edit_calculation_path(calculation) %></td>
        <td><%= link_to 'Destroy', calculation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', matches_path %>
 