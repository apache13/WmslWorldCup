<h1>Listing teams</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Team ID.</th>
      <th>Name</th>
      <th>Abbreviate</th>
      <th>Flag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
      	<td><%= team.id %></td>
        <td><%= team.name %></td>
        <td><%= team.abbreviate %></td>
        <td><%= flag_image_tag team %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

