<div class="row">
	<div class="col-md-2">
		<ul class="list-group">
			<li class="list-group-item">
				<strong>Name:</strong>
				<%= @team.name %>
			</li>

			<li class="list-group-item">
				<strong>Abbreviate:</strong>
				<%= @team.abbreviate %>
			</li>

			<li class="list-group-item">
				<strong>Flag:</strong>
				<%= flag_image_tag @team %>
			</li>
		</ul>
	</div>
	<div class="col-md-10">
		<%= render "teams/result" %>
	</div>
</div>
<div class="row">
	<strong>Fan club</strong>
	<div class="col-md-12">
		<%= render "teams/fev" %>
	</div>
</div>
<% if current_user.admin? %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<% end %>
<%= link_to 'Back', teams_path %>
