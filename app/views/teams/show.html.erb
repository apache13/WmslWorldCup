<div class="row">
	<div class="col-md-2">
		<p id="notice">
			<%= notice %>
		</p>

		<p>
			<strong>Name:</strong>
			<%= @team.name %>
		</p>

		<p>
			<strong>Abbreviate:</strong>
			<%= @team.abbreviate %>
		</p>

		<p>
			<strong>Flag:</strong>
			<%= flag_image_tag @team %>
		</p>
	</div>
	<div class="col-md-10">
		<%= render "teams/fev" %>
	</div>
</div>

<% if current_user.admin? %>
<%= link_to 'Edit', edit_team_path(@team) %> |
<% end %>
<%= link_to 'Back', teams_path %>
