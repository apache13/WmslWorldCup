<h1>Listing bets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Bet ID.</th>
      <th>Facebook</th>
   	  <th>Player</th>
      <th>Match</th>
      <th>Winner</th>
      <th>Score</th>
      <th>Updated</th>
      <th>Match Closed</th>
      <th>Calculation (Pts)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
      	<td><%= bet.id %></td>
      	<td><%= facebook_image_tag bet.player %></td>
      	<td><%= bet.player.name %></td>
        <td><%= match_image_tag bet.match %></td>
        <td><%= flag_image_tag bet.winner %></td>
        <td><strong><%= bet.team1_score.to_s+'-'+bet.team2_score.to_s %></strong></td>
        <td><%= bet.updated_at.localtime %></td>
        <td><%= bet.match.closed %></td>
        <% if bet.calculation != nil %>
        	<td><%= bet.calculation.total_point %></td>
        <% else %>
        	<td><%= 'N/A' %></td>
        <% end %>
        
        
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

