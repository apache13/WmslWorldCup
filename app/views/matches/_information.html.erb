<p>
	<strong>Match closed:</strong>
	<%= @match.closed %>
</p>
<p>
	<strong>Team1:</strong>
	<%= flag_image_tag @match.team1 %>
	<strong>Team2:</strong>
	<%= flag_image_tag @match.team2 %>
</p>
<p>
	<strong>Description:</strong>
	<%= @match.description %>
</p>
<p>
	<strong>Match date/time:</strong>
	<%= @match.match.localtime.to_formatted_s(:short) %>
</p>
<p>
	<strong>LIVE:</strong>
	<% @match.live.split(",").each do |ch| %>
	<%= live_image_tag(ch) %>
	<% end%>
</p>
