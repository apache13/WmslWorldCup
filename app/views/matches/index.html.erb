<h1>Listing matches</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Match</th>
      <th>Team1</th>
      <th>Team2</th>
      <th>Team1 score</th>
      <th>Team2 score</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.match %></td>
        <td><%= flag_image_tag match.team1.abbreviate %></td>
        <td><%= flag_image_tag match.team2.abbreviate %></td>
        <td><%= match.team1_score %></td>
        <td><%= match.team2_score %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

