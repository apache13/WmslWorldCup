<strong>Table</strong>
<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Player</th>
			<th>P</th>
			<th>W</th>
			<th>D</th>
			<th>L</th>
			<th>+/-</th>
			<th>Pts</th>
		</tr>
	</thead>

	<tbody>
		<% @players.each_with_index do |player,index| %>
		<% if index < 1 %>
		<tr class="success">
			<% else %>
		<tr>
			<%end%>
			<td><%= index+1 %></td>
			<td><%= player.name %></td>
			<td>0</td>
			<td>0</td>
			<td>0</td>
			<td>0</td>
			<td>0</td>
			<td>0</td>
		</tr>
		<% end %>
	</tbody>
</table>