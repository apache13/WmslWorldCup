<strong>Table</strong>
<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Player</th>
			<th>P</th>
			<th>TWP</th>
			<th>SP</th>
			<th>Pts</th>
		</tr>
	</thead>

	<tbody>
		<% @tables.each_with_index do |player,index| %>
		<% if index < 1 %>
		<tr class="success">
			<% else %>
		<tr>
			<%end%>
			<td><%= index+1 %></td>
			<td><%= player.name %></td>
			<td><%= player.played %></td>
			<td><%= player.twp %></td>
			<td><%= player.sp %></td>
			<td><%= player.pts %></td>
		</tr>
		<% end %>
	</tbody>
</table>