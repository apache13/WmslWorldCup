<strong>Your bets</strong>
<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Date/Time</th>
			<th>Description</th>
			<th>Team1</th>
			<th>Team2</th>
			<th>Winner</th>
			<th>Score</th>
			<th>Close</th>
			<th>Calculation (Pts)</th>
		</tr>
	</thead>

	<tbody>
		<% @bets.each_with_index do |bet,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= bet.match.match.localtime %></td>
			<td><%= bet.match.description %></td>
			<td><%= flag_image_tag bet.match.team1 %></td>
			<td><%= flag_image_tag bet.match.team2 %></td>
			<td><%= flag_image_tag bet.match.winner %></td>
			<td><strong><%= bet.team1_score.to_s+'-'+bet.team2_score.to_s %></strong></td>
			<td><%= bet.match.closed %></td>
			<% if bet.calculation != nil %>
			<td><%= bet.calculation.total_point %></td>
			<% else %>
			<td><%= 'N/A' %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>